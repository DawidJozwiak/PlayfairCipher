<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath pl.polsl.dawid.jozwiak.playfair.playfaircipherlab2.controller.Main playfair example</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath pl.polsl.dawid.jozwiak.playfair.playfaircipherlab2.controller.Main playfair example</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath pl.polsl.dawid.jozwiak.playfair.playfaircipherlab2.controller.Main playfair example</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>javadoc</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>generate-sources</goal>
                <goal>javadoc:test-aggregate</goal>
                <goal>javadoc:javadoc</goal>
                
            </goals>
            <properties>
                <show>private</show>
                <skipTests>false</skipTests>
            </properties>
        </action>
    </actions>
